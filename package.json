{
  "name": "@aegisjsproject/firebase-account-routes",
  "version": "0.0.1",
  "description": "Firebase account and authentication route modules for `@aegisjsproject/router`",
  "keywords": [
    "firebase",
    "authentication",
    "account"
  ],
  "type": "module",
  "module": "./main.js",
  "unpkg": "./main.js",
  "exports": {
    ".": {
      "import": "./main.js"
    },
    "./*.js": {
      "import": "./*.js"
    },
    "./*.mjs": {
      "import": "./*.js"
    },
    "./*.cjs": {
      "import": "./*.js"
    },
    "./*": {
      "import": "./*.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false,
  "scripts": {
    "test": "npm run lint:js && npm run run:tests",
    "start": "npx @shgysk8zer0/http-server -c ./http.config.js",
    "preversion": "npm test && npm run build --if-present",
    "prepare": "npm test && npm run build --if-present",
    "lint:js": "eslint .",
    "fix:js": "eslint . --fix",
    "run:tests": "node --test",
    "create:lock": "npm i --package-lock-only --ignore-scripts --no-audit --no-fund",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch && npm run create:lock",
    "version:bump:minor": "npm version --no-git-tag-version minor && npm run create:lock",
    "version:bump:major": "npm version --no-git-tag-version major && npm run create:lock"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AegisJSProject/firebase-account-routes.git"
  },
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "funding": [
    {
      "type": "librepay",
      "url": "https://liberapay.com/shgysk8zer0"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/shgysk8zer0"
    }
  ],
  "bugs": {
    "url": "https://github.com/AegisJSProject/firebase-account-routes/issues"
  },
  "homepage": "https://github.com/AegisJSProject/firebase-account-routes#readme",
  "devDependencies": {
    "@shgysk8zer0/eslint-config": "^1.0.4",
    "@shgysk8zer0/http-server": "^1.1.1",
    "@shgysk8zer0/importmap": "^1.4.82",
    "eslint": "^9.37.0"
  }
}
